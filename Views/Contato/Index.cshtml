@model List<WebApplication1.Models.Contato>
@{
    ViewData["Title"] = "Home Page";
    <link href="~/css/adicionarEmodificar.css" rel="stylesheet" type="text/css" />
}

<div class="container">

    <div class="row">

        <div class="adicionarEmodificar col-12  col-lg-8  mx-auto ">
            <h1 class="text-center text-funcao">AGENDA</h1>

            <h4 class="text-center">@Model.Count contatos</h4>
            <div class="text-right">
                <a href="/contato/cadastrar" class="btn btn-primary"> CADASTRAR</a>
            </div>
            <table class="table">
                <thead id="headtabela">
                    <tr>
                        <th scope="col">Nome</th>
                        <th scope="col">Telefone</th>
                        <th scope="col">Email</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contato in Model)
                    {
                        <tr>
                            <td>@contato.Nome</td>
                            <td>@contato.Telefone</td>
                            <td>@contato.Email</td>
                            <td>
                                <a href="/contato/modificar/@contato.Id"><img src="~/images/pen.png" /> </a>
                                <a href="/contato/excluir/@contato.Id"><img src="~/images/close.png" /> </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
